{
  "name": "radio-web",
  "version": "1.0.0",
  "description": "Radio Rab News Portal â€” static site",
  "homepage": "https://prodotes.github.io/radio-rab-web/",
  "scripts": {
    "lint": "eslint *.js",
    "format": "prettier --write '**/*.{js,css,html}'",
    "lint-html": "htmlhint '**/*.html'",
    "lint-css": "stylelint *.css",
    "validate": "npm run lint && npm run lint-html && npm run lint-css",
    "build:js": "node -e \"const fs=require('fs'); const files=['config.js','data.js','utils.js','ais.js','admin.js','news.js','npt.js','ui.js','script.js']; fs.writeFileSync('bundle.js', files.map(f=>fs.readFileSync(f,'utf8')).join('\\n\\n'))\"",
    "build": "npm run build:js",
    "deploy": "npm run build && gh-pages -d ."
  },
  "devDependencies": {
    "eslint": "^8.52.0",
    "gh-pages": "^4.0.0",
    "htmlhint": "^1.1.4",
    "playwright": "^1.58.2",
    "prettier": "^2.8.8",
    "stylelint": "^14.16.1",
    "stylelint-config-standard": "^25.0.0",
    "ws": "^8.19.0"
  }
}
